<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:weightSum="1"
    tools:showIn="@layout/activity_package_recharge">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="30dp"
        android:text="Package Recharge"
        android:textColor="#fff"
        android:textSize="25dp"
        android:textStyle="normal|bold|italic" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="Select Operator"
        android:textColor="#fff"
        android:textSize="16dp" />
    <Spinner
        android:id="@+id/spMobileOperator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_gravity="left"
        android:background="#FFFFFF"
        android:padding="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="Select Package"
        android:textColor="#fff"
        android:textSize="16dp" />
    <Spinner
        android:id="@+id/spMobileOperatorPackage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_gravity="left"
        android:background="#FFFFFF"
        android:padding="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="Enter Mobile Number"
        android:textColor="#fff"
        android:textSize="16dp" />
    <AutoCompleteTextView
        android:id="@+id/actvMobileNumberPackage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#fff"
        android:hint="01XXXXXXXXX"
        android:textColor="#000"
        android:inputType="number"
        android:padding="5dp"
        android:textSize="16dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="Amount"
        android:textColor="#fff"
        android:textSize="16dp" />
    <EditText
        android:id="@+id/etAmountPackage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#fff"
        android:hint=""
        android:textColor="#000"
        android:inputType="text"
        android:padding="5dp"
        android:textSize="16dp" />

    <RadioGroup
        android:id="@+id/radioTypePackage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <RadioButton
            android:id="@+id/rbPrePaidPackage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:layout_marginRight="10dp"
            android:text="PrePaid"
            android:background="#fff"
            android:textColor="#333"
            android:textSize="16dp"
            android:checked="true" />
        <RadioButton
            android:id="@+id/rbPostPaidPackage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="PostPaid"
            android:background="#fff"
            android:textColor="#333"
            android:textSize="16dp" />
    </RadioGroup>
    <Button
        android:id="@+id/bSendNowPackageRecharge"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:text="Send Now"
        android:background="#0072C6"
        android:textColor="#fff"
        android:textSize="18dp" />

</LinearLayout>
